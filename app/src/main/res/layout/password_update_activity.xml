<?xml version="1.0" encoding="utf-8"?>
<com.wuzhanglong.library.view.ReboundScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conveyor_bg"
    android:orientation="vertical"

    tools:context="com.wuzhanglong.conveyor.activity.PasswordUpdateActivity">

    <EditText
        android:id="@+id/pwd_update_01_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/C1"
        android:drawableLeft="@drawable/pwd_update_01"
        android:drawablePadding="5dp"
        android:hint="原密码"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/C6"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/pwd_update_02_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="@color/C1"
        android:drawableLeft="@drawable/pwd_update_01"
        android:drawablePadding="5dp"
        android:hint="新密码"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/C6"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/pwd_update_03_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="@color/C1"
        android:drawableLeft="@drawable/pwd_update_01"
        android:drawablePadding="5dp"
        android:hint="确认密码"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/C6"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="提 交"
        android:textColor="@color/C1"
        android:textSize="15sp"/>
</LinearLayout>
</com.wuzhanglong.library.view.ReboundScrollView>